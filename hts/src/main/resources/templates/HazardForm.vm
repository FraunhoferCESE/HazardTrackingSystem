<body class="aui-layout aui-theme-default">
	<header class="aui-page-header">
		<div class="aui-page-header-inner">
			<h2>Hazard Form</h2>
		</div>
	</header>
	<nav id="main-nav" class="aui-navgroup aui-navgroup-horizontal">
        <div class="aui-navgroup-inner">
            <div class="aui-navgroup-primary">
                <ul class="aui-nav">
                    <li id="hazard-nav-item" class="aui-nav-selected"><a href="#">Hazard form</a></li>
                    <li id="cause-nav-item"><a href="#">Causes</a></li>
