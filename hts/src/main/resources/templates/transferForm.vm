<form class='aui' id="transferForm">
	<div class='field-group'>
		<label class='popupLabels' for='hazardList'>Hazard Reports</label>
		<select size='1' class='select long-field' name='hazardList' id='hazardList'>
			<option value=''>-Select Hazard Report-</option>
			#foreach( $hazard in $allHazards )
				<option value="$hazard.getID()"> $hazard.getHazardNum() - $hazard.getTitle()</option>
			#end
		</select>
	</div>
	<div class="field-group container">
		
	</div>
	<div class='field-group'>
		<label for='transferReason'>Transfer Reason</label>
		<textarea class='textarea long-field' rows='6' cols='5' type='textarea' id='transferReason' name='transferReason'></textarea>
	</div>
	<div class="buttons-container">
		<button class="aui-button causeSaveAllChanges causeButtons" type="button">Save All Changes</button>
		<button type="button" class="button causeButtons transfers" id="clearCause">Clear</button>
	</div>
</form>