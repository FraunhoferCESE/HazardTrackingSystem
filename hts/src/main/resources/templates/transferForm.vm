<form class="aui transferForms" id="transferForm" method="post" action="causeform" data-key="$!cause.getID()">
	<div class="field-group">
	    <label for="transferTitle">Title</label>
	    <input class="text long-field" type="text" id="transferTitle" name="transferTitle" value="$!cause.getTitle()" disabled>
	</div>
	<div class="field-group">
	    <label for="transferHazardNumber">Hazard #</label>
	    <input class="text long-field" type="text" id="transferHazardNumber" name="transferHazardNumber" value="">
	</div>
	<div class="field-group">
	    <label for="transferHazardReport">Hazard Report</label>
	    <input class="text long-field" type="text" id="transferHazardReport" name="transferHazardReport" value="">
	</div>
	<div class="field-group">
	    <label for="transferComment">Transfer Comment</label>
	    <textarea class="textarea long-field" rows="6" cols="10" name="transferComment" id="transferComment">$!cause.getDescription()</textarea>
	</div>
	<div class="buttons-container">
		<div>
			<button type="button" class="button causeButtons transfers" id="causeAddControl" disabled>Add Control</button>
			<button type="button" class="button causeButtons transfers" id="causeAddReference" disabled>Add Reference Doc</button>
		</div>
	</div>
</form>