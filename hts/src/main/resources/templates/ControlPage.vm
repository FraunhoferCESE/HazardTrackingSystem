<div>
	<div class="ControlsHeaderHazardInfo">
		<span class="ControlsHeadingOne">Hazard Title:
			 <span class="ControlsHeadingOneContent" id="HazardTitleForControl">$!hazardTitle</span>
		</span>
		<span class="ControlsHeadingOne">Hazard #:
			 <span class="ControlsHeadingOneContent" id="HazardNumberForControl">$!hazardNumber</span>
		</span>
	</div>
	<span class="ControlsHeadingOne">Controls:</span>
	#if( $hazardControls.size() == 0 )
		<p>No controls have been created for this hazard report.</p>
	#else
		<table cellspacing="0">
			<thead>
				<tr>
					<th class="ControlsTableHeader ControlsTableCellOne"></th>
					<th class="ControlsTableHeader ControlsTableCellTwo"></th>
					<th class="ControlsTableHeader ControlsTableCellThree">Description</th>
					<th class="ControlsTableHeader ControlsTableCellFour">Control group</th>
					<th class="ControlsTableHeader ControlsTableCellFive">Last updated</th>
					<th class="ControlsTableHeader ControlsTableCellFive">Delete?</th>
				</tr>
			</thead>
			<tbody>
				#foreach( $hazardControl in $hazardControls )
					#set($theTransfer = 0)
					<tr class="ControlsTableEntryControlID$hazardControl.getID()">
						<td class="ControlsTableCellToggle aui-icon aui-icon-small aui-iconfont-add" id="ControlsTableEntry$hazardControl.getID()">
						</td>
						<td class="ControlsTableAllCells">Control $hazardControl.getControlNumber()</td>
						<td class="ControlsTableAllCells">
							#if($hazardControl.getTransfer() != 0)
								#foreach($transfer in $controlTransfers)
									#if($transfer.getTransferID() == $hazardControl.getTransfer())
										#set($theTransfer = $transfer)
										#if($theTransfer.getTargetType() == "CONTROL")
											<div class="ControlsTableDescriptionText"><a href="$baseUrl/plugins/servlet/controlform?edit=y&key=$transfer.getTargetHazardID()&id=$transfer.getTargetID()&trans=y">$!theTransfer.getTargetHazardNo():CTRL $!theTransfer.getTargetHazardControlNo() - $!transfer.getTargetHazardControlDescription()</a></div>
										#end
										#if($theTransfer.getTargetType() == "CAUSE")
											<div class="ControlsTableDescriptionText"><a href="$baseUrl/plugins/servlet/causeform?edit=y&key=$transfer.getTargetHazardID()&id=$transfer.getTargetID()&trans=y">$!theTransfer.getTargetHazardNo():CAUSE $!theTransfer.getTargetHazardCauseNo() - $!theTransfer.getTargetHazardCauseTitle()</a></div>
										#end
										#break
									#end
								#end
							#else
								<div class="ControlsTableDescriptionText">$hazardControl.getDescription()</div>
							#end
						</td>
						#if($hazardControl.getControlGroup().getLabel() == "null" || $hazardControl.getTransfer() != 0)
							<td class="ControlsTableAllCells">N/A</td>
						#else
							<td class="ControlsTableAllCells">$hazardControl.getControlGroup().getLabel()</td>
						#end
						#if( !$hazardControl.getLastUpdated() )
							<td class="ControlDate ControlsTableAllCells">$hazardControl.getOriginalDate()</td>
						#else
							<td class="ControlDate ControlsTableAllCells">$hazardControl.getLastUpdated()</td>
						#end
						<td class="ControlsTableAllCells">
							<input type="checkbox" class="ControlsTableListOfCreatedControls" value="$hazardControl.getID()" data-controlid="$!hazardControl.getID()">
						</td>
					</tr>
					<tr class="ControlsTableEntryControlID$hazardControl.getID()">
						<td colspan="100%" class="ControlsTableEditEntryHidden" id="ControlsTableEditEntry$hazardControl.getID()">
							#if( $hazardControl.getTransfer() != 0 )
								<div class="ControlsTableEditTransferEntryContainer">
									#parse("/templates/EditTransferredControl.vm")
								</div>
							#else
								<div class="ControlsTableEditEntryContainer">
									#parse("/templates/EditControlForm.vm")
								</div>
							#end
						</td>
					</tr>
				#end
			</tbody>
		</table>
		</div>
		<div class="ControlsButtonPanel">
			<button class="aui-button SaveAllChanges" data-new="false">Save All Changes</button>
			<button class="aui-button" id="RenumberAndSave" disabled>Renumber and Save</button>
			<button class="aui-button" id="ExpandAllControls">Expand all</button>
		</div>
	#end
	<div>
		<div class="ControlsHeadingTwo">
			<span class="aui-icon aui-icon-small aui-iconfont-add" id="addNewControl"></span>
			<span>Add New Control</span>
		</div>
		<div class="ControlsNewContainer">
			#parse("/templates/NewControlForm.vm")
		</div>
		<div class="ControlsHeadingTwo">
			<span class="aui-icon aui-icon-small aui-iconfont-add" id="addTransferControl"></span>
			<span>Add Control Transfer</span>
		</div>
		<div class="ControlsTransferContainer">
			#parse("/templates/TransferControlForm.vm")
		</div>
	</div>
</div>