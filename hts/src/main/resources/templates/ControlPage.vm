<div>
	<div class="ControlsHeaderHazardInfo">
		<span class="ControlsHeadingOne">Hazard Title:
			 <span class="ControlsHeadingOneContent" id="HazardTitleForControl">$!hazardTitle</span>
		</span>
		<span class="ControlsHeadingOne">Hazard #:
			 <span class="ControlsHeadingOneContent" id="HazardNumberForControl">$!hazardNumber</span>
		</span>
	</div>
	<span class="ControlsHeadingOne">Controls:</span>
	#if( $hazardControls.size() == 0 )
		<p>No controls have been created for this hazard report.</p>
	#else
		<table class="ControlsTable">
			<thead>
				<tr>
					<th class="ControlsTableHeader ControlsTableCellOne"></th>
					<th class="ControlsTableHeader ControlsTableCellTwo"></th>
					<th class="ControlsTableHeader ControlsTableCellThree">Description</th>
					<th class="ControlsTableHeader ControlsTableCellFour">Control group</th>
					<th class="ControlsTableHeader ControlsTableCellFive">Last updated</th>
					<th class="ControlsTableHeader ControlsTableCellFive">Delete?</th>
				</tr>
			</thead>
			<tbody>
				#foreach( $hazardControl in $hazardControls )
					<tr class="ControlsTableEntryControlID$hazardControl.getID()">
						<td class="ControlsTableCellToggle aui-icon aui-icon-small aui-iconfont-add" id="ControlsTableEntry$!velocityCount">
						</td>
						<td>Control $velocityCount</td>
						<td>
							<div class="ControlsTableDescriptionText">$hazardControl.getDescription()</div>
						</td>
						#if($hazardControl.getControlGroup().getLabel() == "null")
							<td>N/A</td>
						#else
							<td>$hazardControl.getControlGroup().getLabel()</td>
						#end
						#if( !$hazardControl.getLastUpdated() )
							<td class="ControlDate">$hazardControl.getOriginalDate()</td>
						#else
							<td class="ControlDate">$hazardControl.getLastUpdated()</td>
						#end
						<td>
							<input type="checkbox" class="ControlsTableListOfCreatedControls" value="$hazardControl.getID()">
						</td>
					</tr>
					<tr class="ControlsTableEntryControlID$hazardControl.getID()">
						<td colspan="100%" class="ControlsTableEditEntryHidden" id="ControlsTableEditEntry$!velocityCount">
							<div class="ControlsTableEditEntryContainer">
								#parse("/templates/EditControlForm.vm")
							</div>
						</td>
					</tr>
				#end
			</tbody>
		</table>
		</div>
		<div class="ControlsButtonPanel">
			<button class="aui-button" id="SaveAllChanges" >Save All Changes</button>
			<button class="aui-button" id="RenumberAndSave" >Renumber and Save</button>
			<button class="aui-button" id="ExpandAllControls">Expand all</button>
		</div>
	#end
	<div>
		<span class="ControlsHeadingTwo">New Control:</span>
		#parse("/templates/NewControlForm.vm")
	</div>
</div>