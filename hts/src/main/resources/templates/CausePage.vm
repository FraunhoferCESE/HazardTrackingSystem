<div class="causeBody">
	<h2>$!newestHazard.getHazardNum() - $!newestHazard.getTitle()</h2>
	<button class="aui-button" id="expandAll">Expand all</button>
	<div id="CauseTableHolder" class="table">
		<div class="header">
	    	<div class="cell"></div>
	    	<div class="cell">Title</div>
		    <div class="cell">Owner</div>
	    	<div class="cell">Last updated</div>
	  	</div>
	  	#foreach( $cause in $causes )
		  	<div class="rowGroup">
		    	<div class="row">
		    		<div class="cell toggle"><span class="aui-icon aui-icon-small aui-iconfont-add"></span>$!cause.getCauseNumber()</div>
		    		<div class="cell">$!cause.getTitle()</div>
		    		<div class="cell">$!cause.getOwner()</div>
		    		<div class="cell lastUpdated">$!cause.getLastUpdated()</div>
		    	</div>
		    	<div class="formContainer row">
		    		<div class="cell"></div>
		    		<div class="cell">#parse("/templates/causeForm.vm")</div>
		    		<div class="cell"></div>
		    		<div class="cell"></div>
		    	</div>
		  	</div>
		#end
	</div>
	<div class="newCauseFormHolder">
		<h3>Add New Cause</h3>
		#parse("/templates/NewCauseForm.vm")
	</div>
</div>