<form class="aui" id="addNewCauseForm" method="post" action="causeform">
	<div class="field-group">
	    <label for="causeTitle">Title <span class="aui-icon icon-required">(required)</span></label>
	    <input class="text long-field" type="text" id="causeTitle" name="causeTitle">
	</div>
	<div class="field-group">
	    <label for="cause-title">Owner</label>
	    <input class="text long-field" type="text" id="causeOwner" name="causeOwner">
	</div>

	<div class="field-group">
		<label for="causeRisk">Risk Category</label>
		<select class="select" id="causeRisk" name="causeRisk">
			<option value="" selected>-Select-</option>
	    	#foreach ($risk in $riskCategories)
				<option value="$risk.getID()">$!risk.getValue()</option>
	    	#end
		</select>
	</div>

	<div class="field-group">
	    <label for="causeLikelihood">Risk Likelihood</label>
	    <select class="select" id="causeLikelihood" name="causeLikelihood">
	    	<option value="" selected>-Select-</option>
	    	#foreach ($!likelihood in $!riskLikelihoods)
				<option value="$likelihood.getID()">$!likelihood.getValue()</option>
	    	#end
	    </select>
	</div>

	<div class="field-group">
	    <label for="causeEffects">Effects</label>
	    <input class="text long-field" type="text" id="causeEffects" name="causeEffects">
	</div>
	<div class="field-group">
	    <label for="causeDescription">Description</label>
	    <textarea class="textarea long-field" rows="6" cols="10" name="causeDescription" id="causeDescription"></textarea>
	</div>
	<div class="buttons-container">
		<button class="aui-button causeSaveAllChanges" type="button" data-new="true">Save All Changes</button>
		<input type="reset" value="Clear" class="aui-button">
	</div>
	<input type="hidden" name="hazardID" id="hazardID" value="$!hazardID">
</form>