<form class="aui editTransferredControlForm" name="editTransferredControlForm" action="controlform" method="post" data-key="$!hazardControl.getID()">
	<div class="ControlsTableEditEntryField">
		<label class="ControlsTableEditEntryFieldLabelHeadingOne" for="controlTransferReasonEdit">Transfer Reason </label>
		<textarea class="textarea long-field" name="controlTransferReasonEdit" id="controlTransferReasonEdit">$!theTransfer.getOriginHazardControlTransferReason()</textarea>
	</div>
	<input type="hidden" name="originID" id="originID" value="$theTransfer.getOriginID()">
	<input type="hidden" name="editTransfer" id="editTransfer" value="y">
	<input type="hidden" name="hazardID" id="hazardID" value="$!hazardID">
	<input type="hidden" name="controlID" id="controlID" value="$!hazardControl.getID()">
</form>